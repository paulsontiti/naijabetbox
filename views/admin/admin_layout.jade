    body
        .container
            nav.navbar.navbar-inverse.navbar-fixed-top
                .container
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') NaijaBetBox
                    #navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li(class=(title === 'Users' ? 'active' : ''))
                                a(href='/admin/user') Users
                            li(class=(title === 'Users request' ? 'active' : ''),id='userRequest')
                                a User request
                                div(id='ulUserRequest')
                                        a(href='/admin/fund_request') Fund bet
                                        span  | 
                                        a(href='/admin/recharge_request') Buy airtime
                                        span  | 
                                        a(href='/admin/withdraw_request') Withdraw cash
                        div.logout
                            a.btn.btn-success(href='/login/logout') Logout
                        
                // /.nav-collapse
            
        block content
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src='/javascripts/bootstrap.js')
        script(src='/javascripts/custom/jquery_dropdown.js')