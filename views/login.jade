extends layout

block content
	.container
		.row
			.col-lg-3

			.col-lg-6
				form(method='post',action='/login/login')
					input(type='hidden',name='_csrf',value=csrfToken)
					h1 Login
					ul.errors
							if errors
									each error,i in errors
											li.alert.alert-danger #{error.msg}
					.form-group
							label Username
							input.form-control(name='username',type='text',placeholder='enter your username',autofocus='true')
					.form-group
							label Password
							input.form-control(name='password',type='password',placeholder='enter your password')  
					
					button.btn.btn-success(type='submit') Login   
			.col-lg-3           